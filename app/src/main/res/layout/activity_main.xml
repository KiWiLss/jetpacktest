<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

   <LinearLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
   android:orientation="vertical">

       <Button
               android:id="@+id/btn_main_jetpack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
       android:text="jetpack"
       android:textAllCaps="false"/>

       <Button
               android:id="@+id/btn_main_dagger"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="dagger"
               android:textAllCaps="false"/>

       <Button
               android:id="@+id/btn_main_qq"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="qq"
               android:textAllCaps="false"/>

       <Button
               android:id="@+id/btn_main_ff"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ff"
               android:textAllCaps="false"/>

       <Button
               android:id="@+id/btn_main_sd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3D侧滑"
               android:textAllCaps="false"/>

       <Button
               android:id="@+id/btn_main_ch"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="通用侧滑"
               android:textAllCaps="false"/>
       <Button
               android:id="@+id/btn_main_qm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="qmui"
               android:textAllCaps="false"/>
   </LinearLayout>

</androidx.core.widget.NestedScrollView>