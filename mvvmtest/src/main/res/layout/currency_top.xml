<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tb_currency_top"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_currency_top_back"
        android:layout_width="@dimen/m24"
        android:layout_height="@dimen/m24"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/m14"
        android:src="@drawable/arrow_back"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/tv_currency_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/m17" />

    <!--文字-->
    <TextView
        android:id="@+id/tv_currency_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/m14"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/m14"
        android:visibility="gone" />
    <!--image-->
    <ImageView
        android:id="@+id/iv_currency_top_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/m14"
        android:src="@drawable/menu_right"
        android:tag="skin:all_bg:background"
        android:tint="@color/white"
        android:visibility="gone" />

</RelativeLayout>